.section {
    margin: 16rpx 0;
}
.header {
    margin: 0 16rpx;
    position: relative;
    border-radius: 3px;
    box-shadow: 1px 2px 6px rgba(0, 0, 0, .6);
}

.header .left{
    width: 50%;
    align-items: flex-end;
    justify-content: space-between;
    display: inline-flex;
    flex-direction: column;
    position: relative;
}

.header .left::after{
    content: '';
    background: rgba(0, 0, 0, .3);
    top: 30rpx;
    right: 0;
    width: 1px;
    height: 68rpx;
    display: inline-block;
    position: absolute; 
}

.header .right{
    width: 50%;
    align-items: flex-end;
    justify-content: space-between;
    display: inline-flex;
    flex-direction: column;
}

.section {
    align-items: center;
    display: flex;
    flex-direction: column;
}

.chart {
    margin: 8rpx 0;
}

.income,
.expend {
    font-size: 80rpx;
    line-height: 100rpx;
    font-weight: 200px;
    margin: 8rpx 16rpx; 
}

.income::before{
    content: '收';
    color: #11b719;
    font-size: 30rpx; 
    margin-right: 16rpx;
}

.expend::before{
    content: '支';
    color: #fa4a4d;
    font-size: 30rpx; 
    margin-right: 16rpx;
}

.down-arrow {
    position: relative;
}

.down-arrow:after {
    content: '';
    left: -4rpx;
    border: 4px solid #000000;
    border-left-color: transparent;
    border-right-color: transparent;
    border-bottom-color: transparent;
    position: absolute;
}