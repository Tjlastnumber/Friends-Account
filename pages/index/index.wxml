<!--index.wxml-->
<view id="header" class="body body-scale">
  <view class="section">
    <picker mode="date" fields="month" bindchange="bindDateChange">
      <view class="picker">
        {{date}}
      </view>
    </picker>
    <i class="arrow"></i>
  </view>
  <day-select year="{{selectedYear}}" 
              month="{{selectedMonth}}" 
              day="{{currentDay}}" 
              tags="{{[31]}}" 
              bindselectedDay="_selectedDay"/>
</view>

<view style="background: white; margin: {{bodyHeight + 10}}px 0 0 0;">
  <view id="chart" class="chart"> 
    <canvas class="lineCanvas" canvas-id="lineCanvas" disable-scroll="true" class="canvas" style="width: 100%; --chartHeight: {{chartHeight}}px"></canvas>
  </view>
</view>
<view class='card'>
  <view class='left'>
    <count-up class="income" startVal="0" endVal="{{oneDayAccount.account.income.total}}" decimals="2" duration="1"></count-up>
  </view>
  <view class="right">
    <count-up class="expend" startVal="0" endVal="{{oneDayAccount.account.expenses.total}}" decimals="2" duration="1"></count-up>
  </view>
</view>

