/* component/md-input/md-input.wxss */

.md-input {
  box-sizing: border-box;
  position: relative;
	width: var(--input-width, 150px);
  height: 60px;
}

.md-input input {
  box-sizing: border-box;
  width: 100%;
  height: 48px;
  font-size: 14px;
  line-height: 61px;
	font-weight: 400;
  border: 1px solid rgba(0,0,0, .24);
  border-top: none;
  border-radius: 4px;
	color: rgba(0,0,0, .87);
	background: transparent;
  outline: none;
  position: absolute;
  padding: 17px 13px 13px; 
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -ms-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}

.md-input .bar {
  box-sizing: border-box;
  width: 100%;
  height: 5px;
  display: block;
  position: absolute;
  pointer-events: none;
}

.md-input .bar:before {
  box-sizing: border-box;
  content: '';
  width: 30px;
  height: 5px;
  border-top: 1px solid rgba(0,0,0, .24);
  border-top-left-radius: 4px;
  position: absolute;
  left: 0;
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -ms-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}

.md-input .bar:after {
  box-sizing: border-box;
  content: '';
  width: auto;
  left: 30px;
  right: 0;
  height: 5px;
  border-top: 1px solid rgba(0,0,0,.24);
  border-top-right-radius: 4px;
  position: absolute;
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -ms-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}

.md-input .title {
  color: rgba(0,0,0, .6);
  font-size: 14px;
  font-weight: 500;
  pointer-events: none;
  position: absolute;
  left: 14px;
	top: 15px;
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -ms-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}

.md-input input.focus {
	border:2px solid var(--input-color, #6200ee);
  border-top: none;
  padding: 16px 12px 12px;
}

.md-input .bar.input-state::before {
  width: 10px;
}

.md-input .bar.focus::before {
    border-top:2px solid var(--input-color, #6200ee);
}

.md-input .bar.input-state::after {
  margin-left: var(--margin-left);
  left: 0;
  width: auto;
}

.md-input .bar.focus::after {
  border-top: 2px solid var(--input-color, #6200ee);
}

.md-input .title.input-state,
.md-input .valid {
  font-size: 12px;
  top: -7px;
}

.md-input .title.focus {
  color: var(--input-color, #6200ee);
}